<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangweihan.xweb.dao.UserDao">

	<select id="queryByUserId" resultType="User">
		SELECT *
		FROM user
		WHERE 
		userId= #{userId} limit 1
	</select>

	<select id="queryByUserName" resultType="User">
		SELECT *
		FROM user
		WHERE
		userName= #{userName} limit 1
	</select>

	<select id="queryAllUser" resultType="User">
		SELECT *
		FROM user
	</select>

	<insert id="insertOneUser" parameterType="com.huangweihan.xweb.entity.User" keyProperty="userId">
		INSERT INTO
		user(username)
		VALUES
		(#{userName})
	</insert>

	<update id="updateByUserId">
		UPDATE user
		SET
		username= #{userName}
		WHERE
		userid= #{userId}
	</update>

	<delete id="deleteByUserId">
		DELETE FROM
		user
		WHERE
		userid= #{userId}
	</delete>

	<delete id="deleteAllUser">
		TRUNCATE table
		user
	</delete>

</mapper>